<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".workout"
    >




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Set 1: Plank, Bodyweight Split Squat and Single-Leg Hip Raise"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="Set 2: Bodyweight Squat, Push-Ups and Mountain Climbers
Do each of the exercises in this set for one minute each, not stopping between exercises."></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Set 3: Burpee With Push-Up, Single-Leg Toe Touches and Leg Raises"
        android:layout_marginTop="20dp"

       ></TextView>


</LinearLayout>